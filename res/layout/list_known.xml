<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/reward_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/reward_increase"
        android:contentDescription="@string/increase"
        android:focusable="true"
        android:layout_width="30dp"
        android:src="@drawable/plus"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/reward_number" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/reward_decrease"
        android:contentDescription="@string/decrease"
        android:focusable="true"
        android:src="@drawable/mines"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView 
        android:id="@+id/reward_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>
